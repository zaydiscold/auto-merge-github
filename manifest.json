{
    "manifest_version": 3,
    "name": "GitHub Auto-Merge",
    "version": "1.1",
    "description": "Automatically confirms merge and delete branch on GitHub PRs.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Auto-Merge Settings"
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}